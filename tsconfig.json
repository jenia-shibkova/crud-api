{
  "compilerOptions": {
    "target": "ESNext",                                 
    "lib": ["ESNext"],  
    "module": "ESNext",                                 
    "moduleResolution": "Node",            
     "sourceMap": true,                                 
     "outDir": "./dist/",                               
     "noEmitOnError": true,                            
     "allowSyntheticDefaultImports": true,             
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true, 
    "strict": true, 
    "skipLibCheck": true                             
  },
  "exclude": [
    "node_modules",
    "build",
    "dist",
  ],
  "include": [
    "./*.ts",
    "./src/**/*.ts",
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
